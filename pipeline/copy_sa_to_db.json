{
	"name": "copy_sa_to_db",
	"properties": {
		"activities": [
			{
				"name": "For each table",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.table_array",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy csv files from sa to db",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobStorageReadSettings",
										"recursive": true
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "AzureSqlSink"
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "sa_csv",
									"type": "DatasetReference",
									"parameters": {
										"file_name": {
											"value": "@item().source_table_name",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "db_tbl",
									"type": "DatasetReference",
									"parameters": {
										"table_name": {
											"value": "@item().destination_table_name",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"table_array": {
				"type": "array",
				"defaultValue": [
					{
						"source_table_name": "deniro.csv",
						"destination_table_name": "deniro"
					},
					{
						"source_table_name": "homes.csv",
						"destination_table_name": "homes"
					}
				]
			}
		},
		"annotations": []
	}
}